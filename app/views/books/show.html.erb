<%= render 'books/heder2', book: @book %>
<h2>New book</h2>
<%= form_for(@books) do |f| %>
<% if @book.errors.any? %>
<div class="alert alert-danger" role="alert">
	<p class="error-count"><%= @books.errors.full_messages.count %>errors prohibited this book from being saved:</p>
	<ul>
		<% @books.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= f.label :title, "Title" %>
<%= f.text_field :title %>

<%= f.label :body, "Body" %>
<%= f.text_area :body %>

<%= f.submit :class=> "btn btn-primary btn-block" %>
<% end %>
</div>




<div class="col-xs-9">
	<h1>Book detail</h1>
	<table class="table">
		<tr>
			<td><%= link_to user_path(@book.user) do %>
				<%= attachment_image_tag @book.user, :profile_image, size:"40x40", fallback: "no_iamge.jpg" %><br><%= (@book.user).name %></td>
				<% end %>
				<td><%= @book.title %>
				<td><%= @book.body %></td>
				<% if @book.user  == current_user %>
				<td><%= link_to "Edit", edit_book_path, class:'btn btn-success' %></td>
				<td><%= link_to "Destroy", book_path, method: :delete, data: { confirm:'Are you sure?'}, class:'btn btn-danger' %></td>
				<% end %>
			</tr>
		</table>
	</div>
</div>
</div>
<footer>
	<div class='container'>
		<div class='row'>
			<div class='col-xs-3 col-xs-offset-9'>
				<p>CopyRight Infratop.inc</p>
			</div>
		</div>
	</div>
</footer>