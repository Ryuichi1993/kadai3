<%= render 'books/header1', user: @user %>

<%= render 'books/userinfo1', book: @book %>
	<div class="col-xs-9">
		<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th colspan="1"></th>
						<th>Title</th>
						<th>opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= link_to user_path(book.user) do %>
						<%= attachment_image_tag book.user, :profile_image, size:"40x40", fallback: "no_iamge.jpg" %></td>
				<% end %>
						<td><%= link_to  book_path(book) do %>
							<i class="title"></i><%= book.title %></td>
				<% end %>
						
						<td><%= book.body %></td>
					</tr>
				</tbody>
	<% end %>
			</table>
		</div>
	</div>
</div>




