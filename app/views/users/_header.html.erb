<div class="container">
	<p id="notice"></p>

<div class="row">
	<div class="col-xs-3">
	<h1>user info</h1>
		<table class="table">
			<tr><%= attachment_image_tag user, :profile_image, size:"100x100" , fallback: "no_iamge.jpg"%></tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</table>
		
		<% if user.id == current_user.id %>
		<button type="button" class="btn btn-default btn-block">
		<%= link_to edit_user_path(@user.id) do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		</button><% end %>
		<% else %>
		<button type="button" class="btn btn-default btn-block">
		<%= link_to user_path(current_user.id) do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	</button>
		<% end %>
		<% end %>